<UserControl x:Class="StockTicker.TickerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockTicker"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid x:Name="tickerGrid" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox Height="30" Text="{Binding Name, Mode=OneWay}" Margin="10,10,10,10" FontSize="20"/>

        <TextBox Height="30" Width="80" Grid.Row="2" Text="{Binding Price, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,10" FontSize="20"/>
        
        <TextBox Text="{Binding PriceChange, Mode=OneWay}" Grid.Row="2" Grid.Column="2" Background="{Binding Color, Mode=OneWay}" FontSize="24" TextAlignment="Center" />
        
        <Button Command="{Binding Dispose}" Grid.Column="2" Content="Remove" Background="Red"/>

    </Grid>
</UserControl>
